{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom"],
    "baseUrl": "src/"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
}
